<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/colorPrimary"
    android:textAlignment="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-"
        android:textSize="325px"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:textColor="#ffffff"
        android:minWidth="200dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/btn_4"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btn_12"
        android:layout_toStartOf="@+id/btn_10"
        android:layout_alignEnd="@+id/btn_20"
        android:background="#e25f35"
        android:longClickable="false"
        android:layout_gravity="left" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/btn_6"
        android:layout_above="@+id/btn_20"
        android:layout_marginBottom="110dp"
        android:background="#c70000" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/btn_8"
        android:layout_above="@+id/btn_10"
        android:layout_toEndOf="@+id/textView"
        android:background="@color/colorAccent"
        android:layout_gravity="right" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12"
        android:id="@+id/btn_12"
        android:layout_below="@+id/btn_6"
        android:layout_toStartOf="@+id/btn_6" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20"
        android:id="@+id/btn_20"
        android:layout_toStartOf="@+id/textView"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="left" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10"
        android:id="@+id/btn_10"
        android:layout_alignTop="@+id/btn_20"
        android:layout_toEndOf="@+id/btn_20"
        android:layout_alignStart="@+id/btn_8"
        android:background="@color/colorAccentL"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dados"
        android:textSize="80px"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsa un numero de caras"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/btn_8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="para optener un numero"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dependiendo de las caras "
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/btn_10"
        android:layout_alignBottom="@+id/btn_10"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ultimo numero:"
        android:id="@+id/lbl_ul"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/ultimo_numero"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_below="@+id/lbl_ul"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar ultimo  numero"
        android:id="@+id/cb_mostrar"
        android:checked="true"
        android:textColor="#ffffff"
        android:textAlignment="textStart"
        android:layout_gravity="left|right"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/ultimo_numero" />

</RelativeLayout>
